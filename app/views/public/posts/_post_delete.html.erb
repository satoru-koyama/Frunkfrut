<div>
  <div class="row">
    <!--コメント数-->
    <p class="col">
      コメント数<%= post.comments.where(is_deleted: false).count %>
    </p>
  </div>
  <div class="row">
    <%= link_to post_path(post.id) do %>
      <!--投稿テキスト-->
      <p class="col">
        削除されました。
      </p>
    <% end %>
  </div>
  <div class="row">
    <!--投稿日時-->
    <p class="col">
      投稿日時<%= l post.created_at %>
    </p>
    <!--削除日時-->
    <p class="col">
      削除日時<%= l post.updated_at %>
    </p>
    <!--残り時間-->
    <p class="col">
      残り<%= post.countdown %>
    </p>
  </div>
</div>
