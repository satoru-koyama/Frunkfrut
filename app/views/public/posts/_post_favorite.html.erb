<% if !post.post_favorites.find_by(user_id: current_user.id) && current_user.id != post.user_id %>
  <%= link_to post_post_favorites_path(post.id), method: :post, remote: true do %>
    いいねを付ける<i class="fas fa-thumbs-up" style="color: blue"></i>
    <%= post.post_favorites.all.count %>
  <% end %>
<% elsif post.post_favorites.find_by(user_id: current_user.id) && current_user.id != post.user_id %>
  <%= link_to post_post_favorites_path(post_id: post.id), method: :delete, remote: true do %>
    いいねを外す<i class="fas fa-thumbs-up" style="color: red"></i>
    <%= post.post_favorites.all.count %>
  <% end %>
<% end %>
