<div class="container-fluid">
  <div class="row">
    <div class="col out_button">
      <button id="new_comment_btn" class="button">コメント</button>
      <div class="text">
        <p>コメントしてください。</p>
    </div>
    </div>
  </div>
  <div class="row" id="new_comment">
    <%= form_with model: comment, url: post_comments_path(post.id), method: :post, local: true, class: "col" do |f| %>
      <%= f.text_area :text, size: "120x5", class: "block" %>
      <%= f.file_field :image, class: "block" %>
      <%= f.submit "送信", class: "block" %>
    <% end %>
  </div>
</div>