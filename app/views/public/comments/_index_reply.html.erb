<% replies.each do |reply| %>
  <% if reply.is_deleted == false %>
    <div class="container">
    <div>
      <div class="row">
        <%= link_to user_path(reply.user.id) do %>
          <!--返信主画像-->
          <div class="col">
            <%= attachment_image_tag reply.user, :image, :fill, 30, 30, format: 'jpg', fallback: "noimage.jpg", size: '30x30' %>
          </div>
        <% end %>
        <%= link_to user_path(reply.user.id) do %>
          <!--返信主ニックネーム-->
          <p class="col">
            <% if reply.user.nickname.blank? %>
              no name
            <% else %>
              <%= reply.user.nickname %>
            <% end %>
          </p>
        <% end %>
        <!--いいねボタン-->
        <p class="col">
          <% if reply.reply_favorites.find_by(user_id: current_user.id).nil? && user_signed_in? && current_user.id != reply.user_id %>
            <%= link_to reply_reply_favorites_path(reply.id), method: :post do %>
              いいねを付ける<i class="fas fa-thumbs-up" style="color: blue"></i>
            <% end %>
          <% elsif reply.reply_favorites.find_by(user_id: current_user.id) && user_signed_in? && current_user.id != reply.user_id %>
            <%= link_to reply_reply_favorites_path(reply_id: reply.id), method: :delete do %>
              いいねを外す<i class="fas fa-thumbs-up" style="color: red"></i>
            <% end %>
          <% end %>
          <%= reply.reply_favorites.all.count %>
        </p>
      </div>
      <div class="row">
        <!--返信テキスト-->
        <p class="col">
          <%= reply.text %>
        </p>
      </div>
      <div class="row">
        <!--返信画像-->
        <div class="col">
          <%= attachment_image_tag reply, :image, :fill, 400, 250, format: 'jpg' %>
        </div>
      </div>
      <div class="row">
        <!--返信日時-->
        <p class="col">
          返信日時<%= l reply.created_at %>
        </p>
        <% if reply.updated_at != reply.created_at %>
          <!--更新日時-->
          <p class="col">
            更新日時<%= l reply.updated_at %>
          </p>
        <% end %>
        <!--報告ボタン-->
        <p class="col">
          <% if reply.reply_reports.find_by(user_id: current_user.id).nil? && user_signed_in? && current_user.id != reply.user_id %>
            <%= link_to reply_reply_reports_path(reply.id), method: :post do %>
              報告をする<i class="fas fa-exclamation-triangle" style="color: blue"></i>
            <% end %>
          <% elsif reply.reply_reports.find_by(user_id: current_user.id) && user_signed_in? && current_user.id != reply.user_id %>
            <%= link_to reply_reply_reports_path(reply_id: comment.id), method: :delete do %>
              報告を取り消す<i class="fas fa-exclamation-triangle" style="color: red"></i>
            <% end %>
          <% end %>
        </p>
        <!--返信主がログインユーザーの場合に表示-->
        <% if reply.user_id == current_user.id %>
          <!--編集ボタン-->
          <div class="col">
            <button>編集する</button>
          </div>
            <!--更新するボタン-->
            <div class="col">
              <%= link_to comment_reply_path(comment_id: reply.comment_id, id: reply.id), method: :patch do %>
                <button>更新する</button>
              <% end %>
            </div>
          <!--取り消すボタン-->
          <div class="col">
            <%= link_to delete_comment_reply_path(comment_id: reply.comment_id, id: reply.id), method: :patch do %>
              <button>取り消す</button>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% elsif reply.is_deleted == true %>
    <div class="container">
      <div>
        <%= link_to comment_reply_path(comment_id: reply.comment_id, id: reply.id) do %>
          <div class="row">
            <!--返信テキスト-->
            <p class="col">
              削除されました。
            </p>
          </div>
        <% end %>
        <div class="row">
          <!--返信日時-->
          <p class="col">
            返信日時<%= l reply.created_at %>
          </p>
          <!--削除日時-->
          <p class="col">
            削除日時<%= l reply.updated_at %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>