<%= render partial: 'public/comments/show_comment', locals: { comment: @comment } %>
<%= render partial: 'public/comments/new_reply', locals: { comment: @comment, reply: @reply } %>
<% @replies.each do |reply| %>
  <div class="container">
    <div>
      <div class="row">
        <div class="col">
          <%= attachment_image_tag reply.user, :user_image, :fill, 30, 30, format: 'jpg', fallback: "noimage.jpg", size: '30x30' %>
        </div>
        <p class="col">
          <% if reply.user.nickname.blank? %>
            no name
          <% else %>
            <%= reply.user.nickname %>
          <% end %>
        </p>
        <div class="col">
          <div class="row">
            <p class="col">
              <% if reply.reply_favorites.find_by(user_id: current_user.id).nil? && user_signed_in? %>
                <%= link_to reply_reply_favorites_path(reply.id), method: :post do %>
                  いいねを付ける<i class="fa-solid fa-thumbs-up",style="color: blue"></i>
                  <%= reply.reply_favorites.all.count %>
                <% end %>
              <% elsif reply.reply_favorites.find_by(user_id: current_user.id) && user_signed_in? %>
                <%= link_to reply_reply_favorites_path(reply_id: reply.id), method: :delete do %>
                  いいねを外す<i class="fa-solid fa-thumbs-up",style="color: red"></i>
                  <%= reply.reply_favorites.all.count %>
                <% end %>
              <% end %>
            </p>
          </div>
        </div>
      </div>
      <div class="row">
        <p class="col">
          <%= reply.text %>
        </p>
      </div>
      <div class="row">
        <p class="col">
          コメント日時<%= reply.created_at %>
        </p>
        <p class="col">
          <% if reply.reply_reports.find_by(user_id: current_user.id).nil? && user_signed_in? %>
            <%= link_to reply_reply_reports_path(reply.id), method: :post do %>
              報告をする<i class="fa-solid fa-triangle-exclamation",style="color: blue"></i>
            <% end %>
          <% elsif reply.reply_reports.find_by(user_id: current_user.id) && user_signed_in? %>
            <%= link_to reply_reply_reports_path(reply_id: reply.id), method: :delete do %>
              報告を取り消す<i class="fa-solid fa-triangle-exclamation",style="color: red"></i>
            <% end %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% end %>