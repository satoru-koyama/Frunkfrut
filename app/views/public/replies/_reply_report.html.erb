<% if !reply.reply_reports.find_by(user_id: current_user.id) && user_signed_in? && current_user.id != reply.user_id %>
  <%= link_to reply_reply_reports_path(reply.id), method: :post, remote: true do %>
    報告をする<i class="fas fa-exclamation-triangle" style="color: blue"></i>
  <% end %>
<% elsif reply.reply_reports.find_by(user_id: current_user.id) && user_signed_in? && current_user.id != reply.user_id %>
  <%= link_to reply_reply_reports_path(reply_id: reply.id), method: :delete, remote: true do %>
    報告を取り消す<i class="fas fa-exclamation-triangle" style="color: red"></i>
  <% end %>
<% end %>
