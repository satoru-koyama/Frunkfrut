<div class="container">
  <div class="row">
    <h3 class="col">アカウント情報</h3>
  </div>
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>アカウント画像</th>
            <th>ニックネーム</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>
              <%= attachment_image_tag current_user, :image, :fill, 30, 30, format: 'jpg', fallback: "noimage.jpg", size: '30x30' %>
            </th>
            <th>
              <% if current_user.nickname.blank? %>
                no name
              <% else %>
                <%= current_user.nickname %>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <table class="col">
      <thead>
        <tr>
          <th>自己紹介</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>
            <% if current_user.profile.blank? %>
            <% else %>
              <%= current_user.profile %>
            <% end %>
          </th>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row">
    <h3 class="col">登録情報</h3>
  </div>
  <div class="row">
    <table class="col">
      <tr>
        <td>name</td>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <td>email</td>
        <td><%= current_user.email %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <%= link_to block_users_path do %>
      <p class="col">ブロック一覧</p>
    <% end %>
  </div>
</div>